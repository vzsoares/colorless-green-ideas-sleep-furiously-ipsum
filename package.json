{
    "name": "colorless-green-ipsum",
    "version": "1.0.0",
    "description": "A philosophical nonsense text generator inspired by Chomsky's famous sentence",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "module": "dist/index.js",
    "typings": "dist/index.d.ts",
    "files": [
        "dist/module"
    ],
    "scripts": {
        "build:module:ts": "tsc -b --declaration --emitDeclarationOnly",
        "build:module:cjs": "esbuild ./src/index.ts --bundle --outfile=dist/module/index.js --packages=external --format=cjs",
        "build:module:esm": "esbuild ./src/index.ts --bundle --outfile=dist/module/index.esm.js --packages=external --format=esm",
        "build:module": "npm run build:module:ts && npm run build:module:cjs && npm run build:module:esm",
        "test": "jest"
    },
    "keywords": [
        "lorem-ipsum",
        "text-generator",
        "philosophy",
        "chomsky"
    ],
    "author": "vzsoares",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/vzsoares/colorless-green-ideas-sleep-furiously-ipsum.git"
    },
    "devDependencies": {
        "esbuild": "^0.25.1",
        "tsc": "^2.0.4",
        "typescript": "^5.8.2"
    }
}
